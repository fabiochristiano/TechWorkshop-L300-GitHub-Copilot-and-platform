@model ZavaStorefront.Models.ChatViewModel

@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-4">
    <h2><i class="bi bi-chat-dots"></i> Zava Chat Assistant</h2>
    <p class="text-muted">Ask questions about our products, pricing, or anything else!</p>

    <div class="card mb-3">
        <div class="card-body" id="chatArea" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
            @if (Model.Conversation.Count == 0)
            {
                <p class="text-muted text-center mt-5">Start a conversation by typing a message below.</p>
            }
            else
            {
                @for (int i = 0; i < Model.Conversation.Count; i++)
                {
                    var msg = Model.Conversation[i];
                    if (msg.Role == "user")
                    {
                        <div class="d-flex justify-content-end mb-2">
                            <div class="bg-primary text-white rounded p-2 px-3" style="max-width: 75%;">
                                @msg.Content
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-start mb-2">
                            <div class="bg-white border rounded p-2 px-3" style="max-width: 75%;">
                                @msg.Content
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>

    <form asp-controller="Chat" asp-action="Send" method="post">
        @for (int i = 0; i < Model.Conversation.Count; i++)
        {
            <input type="hidden" name="Conversation[@i].Role" value="@Model.Conversation[i].Role" />
            <input type="hidden" name="Conversation[@i].Content" value="@Model.Conversation[i].Content" />
        }
        <div class="input-group">
            <input type="text" class="form-control" name="UserMessage" value="@Model.UserMessage"
                   placeholder="Type your message..." autocomplete="off" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Send
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        var chatArea = document.getElementById('chatArea');
        if (chatArea) {
            chatArea.scrollTop = chatArea.scrollHeight;
        }
    </script>
}
